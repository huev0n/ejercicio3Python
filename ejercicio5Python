def bisiesto (anyo):
    if (anyo % 100 == 0):
        if (anyo % 400 == 0):
            print('El a単o', anyo, 'es bisiesto')
        else:
            print ('El a単o',anyo,'no es bisiesto')
    else:
        if (anyo % 4 == 0):
            print('El a単o', anyo, 'es bisiesto')
        else:
            print ('El a単o',anyo,'no es bisiesto')


bisiesto(2000)
